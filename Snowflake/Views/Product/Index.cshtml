@model IEnumerable<Snowflake.Models.Product>

@{
	ViewData["Title"] = "Product";
}

<div class="container p-3">
	<div class="row pt-4">
		<div class="col-6">
			<h2 class="text-primary">Product List</h2>
		</div>
		<div class="col-6" style="text-align: end">
			<a asp-action="Upsert" class="btn btn-primary">
			Create New Product
			</a>
		</div>
	</div>

	<br /><br />

	@if (Model.Count() > 0)
	{
			<table class="table table-bordered table-striped" style="width:100%">
				<thead>
					<tr>
						<th>
							Product Name
						</th>
						<th>
							Price
						</th>
						<th></th>
					</tr>
				</thead>
				<tbody>
				@foreach (var obj in Model)
				{
							<tr>
								<td width="50%">@obj.Name</td>
								<td width="30%">@obj.Price</td>
								<td class="text-center">
									<div class="w-75 btn-group" role="group">
										<a asp-route-Id="@obj.Id" asp-action="Upsert" class="btn btn-primary mx-2">Edit</a>
										<a asp-route-Id="@obj.Id" asp-action="Delete" class="btn btn-danger mx-2">Delete</a>
									</div>
								</td>
							</tr>
				}
				</tbody>
			</table>
	}
	else
	{
			<p>No product exists.</p>
	}
</div>
